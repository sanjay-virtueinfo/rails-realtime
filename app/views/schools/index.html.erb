<div class="page-header">
	<h4>
		<%= t("general.Schools") %>
	<%= link_to t('.new', :default => t("helpers.links.new")),
	            new_school_path,
	            :class => 'btn btn-primary btn-small fr' %>		
	</h4>
	
</div>

<%= render "search" %>


<% if flash[:notice] %>
	<div class="alert alert-success"><%= flash[:notice] %><% flash[:notice] = nil %></div>
<% end %>

<div class="schools">
  <%= render "fetchAll" %>
</div>

<div class="fr">
	<% if @schools.next_page %>
		<%= link_to "Load More Schools", schools_path(:page => @schools.next_page), :class => "load-more-schools", :remote => true %>
	<% end %>
</div>	