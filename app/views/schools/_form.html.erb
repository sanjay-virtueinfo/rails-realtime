    </div>
    
    

      <div class="form-actions">
          <div class="row-fluid">
              <div class="span12">
                  <%= f.submit t("general.save"), :class => 'btn btn-success' %>
                  <%= link_to t("general.back"), schools_path, :class => 'btn' %>
              </div><!--/span-->
          </div><!--/row-->
      </div>
    
<% end %>
