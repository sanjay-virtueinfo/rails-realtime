<% if flash[:notice] %>
	<div class="alert alert-success"><%= flash[:notice] %><% flash[:notice] = nil %></div>
<% end %>
<%= form_for @o_single, :remote => true, :html => { :class => 'form-horizontal' } do |f| %>
			<%= f.hidden_field :id, :value => params[:id] %>	
	   <div class="control-group">
      <div class="controls">
        <%= f.text_field :name, :class => 'input-xlarge', :placeholder => 'Name' %>
       	<% if @o_single.errors[:name].any? %>
        	<span class="text-error text-message"><%= @o_single.errors[:name].first %></span>
      	<% end %>
      </div>
    </div>
    
    
    
    <div class="control-group">
      <div class="controls">
