<div class="page-header">
	<h4>
		<%= t("general.forgot_password") %>
	</h4>
</div>
<%= form_for @user, :url => forgot_password_path, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <div class="controls">
      <% if flash[:forgot_pass_error] %>
      	<span class="text-error"><%= flash[:forgot_pass_error] %></span>
  		<% end %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.text_field :email, :class => 'input-xlarge', :placeholder => 'Email' %>
    </div>
  </div>

  <div class="form-actions">
    <div class="row-fluid">
      <div class="span12">
        <%= f.submit t("general.reset_password"), :class => 'btn btn-success' %>
      </div><!--/span-->
    </div><!--/row-->
  </div>
<% end %>
