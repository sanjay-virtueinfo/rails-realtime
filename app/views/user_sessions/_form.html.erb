<%= form_for @user_session, :html => { :class => 'form-horizontal' } do |f| %>

	<% if flash[:error] %>
	  <div class="control-group">
	    <div class="controls">
			  <div class="alert-error" id="notice"><%= flash[:error] %></div>
			  <% flash[:error] = nil %>
	    </div>
	  </div>
	<% end %>    

  <div class="control-group">
    <div class="controls">
			<% @user_session.errors.full_messages.each do |msg| %>
				<% @msg_var = "general.#{msg.gsub(' ', "_")}" %>
				<span class="alert-error"><%= t(@msg_var) %></span>
			<% end %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.text_field :email, :placeholder => 'Email', :class => "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.password_field :password, :placeholder => 'Password', :class => "input-xlarge" %>
    </div>
  </div>

  <div class="form-actions">
		<%= f.submit t("general.login"), :class => 'btn btn-success' %>
		<%= link_to t("general.click_here_to_recover_your_account"), forgot_password_path, :class => '' %>
  </div>

<% end %>
